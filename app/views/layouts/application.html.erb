<!DOCTYPE html>
<html>
  <head>
    <title>RailsWorkingWithBarcodes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'layouts/navigation' %>
    <main role="main">
      <div class="container">
        <% flash.each do |name, msg|  %>
          <%= content_tag(:div, msg, class: "alert alert-info") %>
        <% end  %>
          <%= yield %>
      </div>

    </main>

  </body>
</html>
